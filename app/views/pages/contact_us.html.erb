
<div class="container col-6 volk-gold-border">

  <div class="container mt-4 py-4">
    <h1 class="text-center">Contact Us</h1><br/>
    <p class="text-center">Have a question or comment for us?</p>
  </div>
  <form action="<%= contact_us_submit_path %>" method="post">
    <!-- First Name and Last Name -->
    <div class="row">
      <div class="col mb-3">
        <label for="contactUsFormFirstName" class="form-label">First Name</label>
        <input type="text" class="form-control" id="contactUsFormFirstName" name="first_name" required>
      </div>
      <div class="col mb-3">
        <label for="contactUsFormLastName" class="form-label">Last Name</label>
        <input type="text" class="form-control" id="contactUsFormLastName" name="last_name" required>
      </div>
    </div>
    <!-- Email Address -->
    <div class="mb-3">
      <label for="contactUsFormEmail" class="form-label">Email address</label>
      <input type="email" class="form-control" id="contactUsFormEmail" name="email" placeholder="name@example.com" required>
    </div>
    <!-- Phone -->
    <div class="mb-3">
      <label for="contactUsFormPhone" class="form-label">Phone</label>
      <input type="text" class="form-control" id="contactUsFormPhone" name="phone" placeholder="555-555-5555">
    </div>
    <!-- Comment or Question -->
    <div class="mb-3">
      <label for="contactUsFormMessage" class="form-label">Please enter your message or question</label>
      <textarea class="form-control" id="contactUsFormMessage" name="message" rows="3" required></textarea>
    </div>
    <!-- Submit Button -->
    <button type="submit" class="btn btn-lg volk-gold full-width mb-4">Submit</button>
  </form>
</div>