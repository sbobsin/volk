<p style="color: green"><%= notice %></p>
<hr>  
<h1 class="text-center">Paddles</h1>
<hr>  
<div class="container my-4">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="card" style="width: 385px;">
          <div class="card-body">
            <% product&.images&.each do |image| %>
              <%= image_tag image, size: '350x450' %>
            <% end %>
            
            <h5 class="card-title mt-4"><%= product.name %></h5>
            <h5 class="card-title mt-4"><%= number_to_currency(product.price) %></h5>
            <p class="card-text"></p>
            <%= link_to "Buy Now", product.stripe_pmt_link, class:"btn full-width volk-gold", target:"blank" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
